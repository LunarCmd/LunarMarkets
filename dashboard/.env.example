# =============================================================================
# LUNARMARKETS TRADING DASHBOARD - ENVIRONMENT CONFIGURATION
# =============================================================================

# Required: Market Configuration
# These must be valid Solana public keys for your Percolator market
NEXT_PUBLIC_SLAB_ADDRESS=
NEXT_PUBLIC_TOKEN_ADDRESS=
NEXT_PUBLIC_PROGRAM_ID=
NEXT_PUBLIC_MATCHER_PROGRAM_ID=

# Optional: Underlying Asset
NEXT_PUBLIC_UNDERLYING_ASSET_ADDRESS=

# Optional: Oracle (for price feeds)
NEXT_PUBLIC_ORACLE_ADDRESS=

# RPC Configuration
# Default: Public Solana RPC (rate-limited, not recommended for production)
# Get your own RPC from: Helius, QuickNode, Alchemy, or run your own node
NEXT_PUBLIC_RPC_URL=https://api.mainnet-beta.solana.com

# Market Display Configuration
NEXT_PUBLIC_MARKET_NAME=LIQUID/SOL PERP
NEXT_PUBLIC_MARKET_DESCRIPTION=Trade LIQUID with SOL collateral
NEXT_PUBLIC_COLLATERAL_SYMBOL=SOL
NEXT_PUBLIC_UNDERLYING_SYMBOL=LIQUID
NEXT_PUBLIC_COLLATERAL_DECIMALS=9
NEXT_PUBLIC_UNDERLYING_DECIMALS=6
NEXT_PUBLIC_INVERT_PRICE=0

# App Branding
NEXT_PUBLIC_APP_NAME=LunarMarkets
NEXT_PUBLIC_APP_DESCRIPTION=Perpetual Trading Dashboard
NEXT_PUBLIC_APP_LOGO=/logo.png

# Refresh Interval (milliseconds)
NEXT_PUBLIC_REFRESH_INTERVAL=5000

# Multi-Market Support (Optional)
# Add additional markets as JSON array:
# NEXT_PUBLIC_MARKETS=[{"id":"market2","name":"BTC/SOL","slabAddress":"...","tokenAddress":"...","programId":"...","matcherProgramId":"..."}]
